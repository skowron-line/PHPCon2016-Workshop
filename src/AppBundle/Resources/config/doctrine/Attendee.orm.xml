<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Attendee" table="attendee" repository-class="AppBundle\Repository\AttendeeRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <one-to-one field="attendee" target-entity="AppBundle\Entity\Application" />
        <one-to-one field="workshop" target-entity="AppBundle\Entity\Workshop" />
    </entity>
</doctrine-mapping>