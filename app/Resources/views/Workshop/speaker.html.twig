{% extends '::base.html.twig' %}

{% block body %}
    {{ form_start(speakerForm) }}
    <div class="form-group">
        <label for="exampleInputEmail1">First Name</label>
        {{ form_widget(speakerForm.firstName, {
            'attr': {
                'class' : 'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Last Name</label>
        {{ form_widget(speakerForm.lastName, {
            'attr': {
                'class' : 'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        {{ form_widget(speakerForm.email, {
            'attr': {
                'class' : 'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">About</label>
        {{ form_widget(speakerForm.about, {
            'attr': {
                'class' : 'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        {{ form_widget(speakerForm.submit, {
            'label': 'Add',
            'attr': {
                'class' : 'btn btn-success'
            }
        }) }}
    </div>

    {{ form_rest(speakerForm) }}
{% endblock %}