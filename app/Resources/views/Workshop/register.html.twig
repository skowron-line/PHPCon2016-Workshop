{% extends '::base.html.twig' %}

{% block body %}
    {{ form_start(registrationForm) }}

    {% set errors = form_errors(registrationForm.application) %}
    {% if errors is not empty %}
        <div class="alert alert-danger" role="alert">{{ errors | raw }}</div>
    {% endif %}

    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        {{ form_widget(registrationForm.application, {
            'attr': {
                'class' : 'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        {{ form_widget(registrationForm.submit, {
            'label': 'Register',
            'attr': {
                'class' : 'btn btn-success'
            }
        }) }}
    </div>
    {{ form_rest(registrationForm) }}
{% endblock %}